<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.wl.turbidimetric.upload.view.UploadSettingsViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".upload.view.UploadSettingsActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/themePositiveColor"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:id="@+id/tv_back"
                    style="@style/TextTitle"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="返回"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fillViewport="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                style="@style/TextTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="连接设置"
                                android:textColor="@color/themePositiveColor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="自动上传" />

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="14dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <Switch
                                        android:id="@+id/sw_auto_upload"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:switchMinWidth="56dp"
                                        android:thumb="@drawable/selector_switch_thumb"
                                        android:track="@drawable/selector_switch_track" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="断开连接后自动重连" />

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="14dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <Switch
                                        android:id="@+id/sw_auto_reconnection"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:switchMinWidth="56dp"
                                        android:thumb="@drawable/selector_switch_thumb"
                                        android:track="@drawable/selector_switch_track" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="超时自动重发" />

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="left"
                                    android:text="重发次数" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/et_retry_count"
                                        style="@style/EtDefault"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minWidth="100dp"
                                        android:text="3" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="left"
                                    android:text="超时时间" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/et_timeout_time"
                                        style="@style/EtDefault"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:minWidth="100dp"
                                        android:text="5" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                style="@style/TextTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="双向通讯"
                                android:textColor="@color/themePositiveColor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="获取样本申请信息" />

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="14dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <Switch
                                        android:id="@+id/sw_get_patient"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:switchMinWidth="56dp"
                                        android:thumb="@drawable/selector_switch_thumb"
                                        android:track="@drawable/selector_switch_track" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_get_patient1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="获取方式" />


                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_real_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="实时获取" />

                                    <RadioButton
                                        android:id="@+id/rb_before_testing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="检测前获取" />
                                </RadioGroup>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_real_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <RadioGroup
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="50dp"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_sn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="编号" />

                                    <RadioButton
                                        android:id="@+id/rb_bc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="条码" />

                                </RadioGroup>

                            </LinearLayout>

                            <TextView
                                style="@style/TextTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="通讯参数"
                                android:textColor="@color/themePositiveColor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="通讯方式" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="14dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <RadioGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <RadioButton
                                            android:id="@+id/rb_serial"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="串口通讯" />

                                        <RadioButton
                                            android:id="@+id/rb_socket"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:text="网口通讯" />
                                    </RadioGroup>

                                </LinearLayout>
                            </LinearLayout>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ll_serial"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="10dp">

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="波特率" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="14dp"
                                            android:gravity="center_vertical"
                                            android:orientation="horizontal">

                                            <RadioGroup
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <RadioButton
                                                    android:id="@+id/rb_baud_rate_9600"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="9600" />

                                                <RadioButton
                                                    android:id="@+id/rb_baud_rate_115200"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="20dp"
                                                    android:text="115200" />
                                            </RadioGroup>

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="10dp">

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="数据位" />

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:gravity="left"
                                            android:text="8" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="10dp">

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="停止位" />

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:gravity="left"
                                            android:text="1" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingTop="10dp">

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="奇偶校验" />

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:gravity="left"
                                            android:text="None" />

                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_socket"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingTop="10dp">

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="left"
                                            android:text="服务端IP" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:orientation="horizontal">

                                            <EditText
                                                android:id="@+id/et_socket_ip"
                                                style="@style/EtDefault"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:minWidth="200dp"
                                                android:text="0.0.0.0" />
                                        </LinearLayout>

                                        <TextView
                                            style="@style/TextHilt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="20dp"
                                            android:gravity="left"
                                            android:text="端口" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="14dp"
                                            android:orientation="horizontal">

                                            <EditText
                                                android:id="@+id/et_socket_port"
                                                style="@style/EtDefault"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:minWidth="100dp"
                                                android:text="22222" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="10dp">

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="字符编码" />

                                <TextView
                                    style="@style/TextHilt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="14dp"
                                    android:gravity="left"
                                    android:text="UTF-8" />

                            </LinearLayout>

                            <TextView
                                style="@style/TextTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:text="调试功能"
                                android:textColor="@color/themePositiveColor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_send_result"
                                    style="@style/BtnNegative"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:text="发送检测结果" />

                                <Button
                                    android:id="@+id/btn_get_test_patient_info"
                                    style="@style/BtnNegative"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:text="获取样本申请信息" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/btn_connect"
                            style="@style/BtnPositive"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="建立连接" />

                        <TextView
                            android:id="@+id/tv_connect_status"
                            style="@style/TextTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/themePositiveColor"
                            android:textSize="26sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/divider"
                        android:gravity="left"
                        android:text="上传日志信息"
                        android:textColor="@color/themePositiveColor"></TextView>

                    <ScrollView
                        android:id="@+id/sv_log"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fillViewport="true">

                        <TextView
                            android:id="@+id/tv_log"
                            style="@style/TextHilt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@color/divider"
                            android:gravity="left"
                            android:padding="8dp"
                            android:textSize="20sp"></TextView>
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/btn_clear"
                            style="@style/BtnPositive"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="清空日志" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</layout>
