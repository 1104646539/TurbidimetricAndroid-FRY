<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.wl.turbidimetric.model.TestResultModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_cb_query_data" />

        <TextView
            android:id="@+id/tvID"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ID" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvDetectionNum"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="编号" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvName"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="姓名" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvGender"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="性别" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvAge"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="年龄" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvAbsorbances"
            style="@style/TextHilt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="吸光度" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvConcentration"
            style="@style/TextHilt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="浓度" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvResult"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="检测结果" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestTime"
            style="@style/TextHilt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="检测时间" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestValue1"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第一次" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestValue2"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第二次" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestValue3"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第三次" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestValue4"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第四次" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />
        <TextView
            android:id="@+id/tvTestOriginalValue1"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值1" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestOriginalValue2"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值2" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestOriginalValue3"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值3" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />

        <TextView
            android:id="@+id/tvTestOriginalValue4"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值4" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="1dp"
            android:layout_height="match_parent"
            app:dividerColor="@color/divider" />
        <TextView
            android:id="@+id/tvProjectName"
            style="@style/TextHilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</layout>
