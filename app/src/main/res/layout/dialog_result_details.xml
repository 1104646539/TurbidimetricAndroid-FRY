<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_hint"
    android:orientation="vertical"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/tv_id"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="28sp" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="编号：" />

        <EditText
            android:id="@+id/et_detectionNum"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:minWidth="200dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓名：" />

        <EditText
            android:id="@+id/et_name"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:minWidth="200dp" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="性别：" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spn_gender"
                android:layout_width="200dp"
                android:layout_height="50dp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="年龄：" />

        <EditText
            android:id="@+id/et_age"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:inputType="numberSigned"
            android:minWidth="200dp" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:text="项目名：" />

        <TextView
            android:id="@+id/tv_project_name"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:background="@drawable/bg_et_gray"
            android:minWidth="200dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="吸光度：" />

        <EditText
            android:id="@+id/et_abs"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:inputType="numberDecimal"
            android:minWidth="200dp" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:text="浓度：" />

        <EditText
            android:id="@+id/et_con"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:inputType="numberDecimal"
            android:minWidth="200dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="样本条码：" />

        <EditText
            android:id="@+id/et_sample_barcode"
            style="@style/EtDefault"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_et_gray"
            android:minWidth="200dp" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="检测时间：" />

        <TextView
            android:id="@+id/tv_test_time"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="结果：" />

        <EditText
            android:id="@+id/et_result"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
