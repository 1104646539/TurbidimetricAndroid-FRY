<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_hint"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="ID" />

        <TextView
            android:id="@+id/tv_id"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="编号：" />

        <TextView
            android:id="@+id/tv_detectionNum"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="姓名：" />

        <EditText
            android:id="@+id/et_name"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="性别：" />

        <EditText
            android:id="@+id/et_gender"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="吸光度：" />

        <EditText
            android:id="@+id/et_abs"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:text="浓度：" />

        <EditText
            android:id="@+id/et_con"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="结果：" />

        <EditText
            android:id="@+id/et_result"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="检测时间：" />

        <TextView
            android:id="@+id/tv_test_time"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTitle"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="样本条码：" />

        <EditText
            android:id="@+id/et_sample_barcode"
            style="@style/TextHilt"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>
