<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@drawable/bg_fragment"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_datamanager_header"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_indicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_indicate1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextHilt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="样本分析"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/iv_indicate"
                app:layout_constraintLeft_toRightOf="@id/iv_indicate"
                app:layout_constraintTop_toTopOf="@id/iv_indicate" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_cuvette_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_marginBottom="10dp"
            android:text="比色皿"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_cuvette_4"
            app:layout_constraintLeft_toRightOf="@id/sv_sample_1"
            app:layout_constraintTop_toTopOf="@id/sv_cuvette_3" />

        <ImageView
            android:id="@+id/iv_cuvette_indicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cuvette_indicate1"
            app:layout_constraintBottom_toBottomOf="@id/sv_cuvette_4"
            app:layout_constraintLeft_toRightOf="@id/tv_cuvette_shelf"
            app:layout_constraintTop_toTopOf="@id/sv_cuvette_3" />


        <TextView
            android:id="@+id/tv_cuvette_shelf_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_cuvette_3"
            app:layout_constraintLeft_toRightOf="@id/iv_cuvette_indicate"
            app:layout_constraintTop_toTopOf="@id/sv_cuvette_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_cuvette_4"
            app:layout_constraintLeft_toRightOf="@id/iv_cuvette_indicate"
            app:layout_constraintTop_toTopOf="@id/sv_cuvette_4" />


        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_cuvette_3"
            android:layout_width="760dp"
            android:layout_height="96dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            app:layout_constraintLeft_toRightOf="@id/iv_cuvette_indicate"
            app:layout_constraintTop_toTopOf="parent" />

        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_cuvette_4"
            android:layout_width="760dp"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@id/sv_cuvette_3"
            app:layout_constraintTop_toBottomOf="@id/sv_cuvette_3" />

        <TextView
            android:id="@+id/tv_sample_shelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:text="样本"
            android:textColor="@color/black2"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/sv_sample_1" />

        <ImageView
            android:id="@+id/iv_sample_indicate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sample_indicate1"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_4"
            app:layout_constraintLeft_toRightOf="@id/tv_sample_shelf"
            app:layout_constraintTop_toTopOf="@id/sv_sample_1" />

        <ImageView
            android:id="@+id/iv_sample_indicate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/sample_indicate2"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_4"
            app:layout_constraintLeft_toRightOf="@id/tv_sample_shelf"
            app:layout_constraintTop_toTopOf="@id/sv_sample_1" />

        <TextView
            android:id="@+id/tv_sample_shelf_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="4"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_4"
            app:layout_constraintLeft_toRightOf="@id/iv_sample_indicate1"
            app:layout_constraintTop_toTopOf="@id/sv_sample_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="3"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_3"
            app:layout_constraintLeft_toRightOf="@id/iv_sample_indicate1"
            app:layout_constraintTop_toTopOf="@id/sv_sample_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_2"
            app:layout_constraintLeft_toRightOf="@id/iv_sample_indicate1"
            app:layout_constraintTop_toTopOf="@id/sv_sample_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textColor="@color/textColor"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/sv_sample_1"
            app:layout_constraintLeft_toRightOf="@id/iv_sample_indicate1"
            app:layout_constraintTop_toTopOf="@id/sv_sample_1" />

        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_sample_1"
            android:layout_width="380dp"
            android:layout_height="72dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="200dp"
            app:layout_constraintLeft_toRightOf="@id/iv_sample_indicate1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_sample_2"
            android:layout_width="380dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/sv_sample_1"
            app:layout_constraintTop_toBottomOf="@id/sv_sample_1" />

        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_sample_3"
            android:layout_width="380dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/sv_sample_2"
            app:layout_constraintTop_toBottomOf="@id/sv_sample_2" />

        <com.wl.turbidimetric.view.ShelfView
            android:id="@+id/sv_sample_4"
            android:layout_width="380dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@id/sv_sample_3"
            app:layout_constraintTop_toBottomOf="@id/sv_sample_3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="140dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="500dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="32dp" />

        <ImageView
            android:id="@+id/iv_reagent_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/state_reagent_r1_full"
            app:layout_constraintLeft_toLeftOf="@id/gl_center"
            app:layout_constraintRight_toLeftOf="@id/iv_reagent_r2"
            app:layout_constraintTop_toTopOf="@id/gl_top"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/tv_reagent_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="试剂R1"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_reagent_r1"
            app:layout_constraintRight_toRightOf="@id/iv_reagent_r1"
            app:layout_constraintTop_toBottomOf="@id/iv_reagent_r1" />

        <TextView
            android:id="@+id/tv_reagent_r1_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="20℃"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_reagent_r1"
            app:layout_constraintRight_toRightOf="@id/iv_reagent_r1"
            app:layout_constraintTop_toBottomOf="@id/tv_reagent_r1" />

        <ImageView
            android:id="@+id/iv_reagent_r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/state_reagent_r2_1"
            app:layout_constraintLeft_toRightOf="@id/iv_reagent_r1"
            app:layout_constraintRight_toLeftOf="@id/iv_cleanout_fluid"
            app:layout_constraintTop_toTopOf="@id/gl_top" />

        <TextView
            android:id="@+id/tv_reagent_r2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试剂R2"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_reagent_r2"
            app:layout_constraintRight_toRightOf="@id/iv_reagent_r2"
            app:layout_constraintTop_toTopOf="@id/tv_reagent_r1" />

        <ImageView
            android:id="@+id/iv_cleanout_fluid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/state_cleanout_fluid_full"
            app:layout_constraintLeft_toRightOf="@id/iv_reagent_r2"
            app:layout_constraintRight_toLeftOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/gl_top" />

        <TextView
            android:id="@+id/tv_cleanout_fluid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清洗液"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_cleanout_fluid"
            app:layout_constraintRight_toRightOf="@id/iv_cleanout_fluid"
            app:layout_constraintTop_toTopOf="@id/tv_reagent_r1" />

        <ImageView
            android:id="@+id/iv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/state_temp"
            app:layout_constraintLeft_toRightOf="@id/iv_cleanout_fluid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/gl_top" />

        <TextView
            android:id="@+id/tv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12°"
            android:textColor="@color/tempColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_temp"
            app:layout_constraintRight_toRightOf="@id/iv_temp"
            app:layout_constraintTop_toTopOf="@id/tv_reagent_r1" />

        <View
            android:id="@+id/v_info_bg"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/bg_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_sample_4" />

        <Button
            android:id="@+id/btn_debug_dialog"
            style="@style/BtnPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minWidth="150dp"
            android:text="调试框"
            app:layout_constraintLeft_toLeftOf="@id/v_info_bg"
            app:layout_constraintTop_toBottomOf="@id/v_info_bg" />

        <TextView
            android:id="@+id/tv_details_state_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="状态："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@id/v_info_bg"
            app:layout_constraintLeft_toLeftOf="@id/v_info_bg"
            app:layout_constraintTop_toTopOf="@id/v_info_bg" />

        <TextView
            android:id="@+id/tv_details_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未放入样本"
            android:textColor="@color/text_details_state"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_details_state_hilt"
            app:layout_constraintLeft_toRightOf="@id/tv_details_state_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />


        <TextView
            android:id="@+id/tv_details_no_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="对应样本序号："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_state"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />

        <TextView
            android:id="@+id/tv_details_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_no_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_no_hilt" />

        <TextView
            android:id="@+id/tv_details_num_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="编号："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_no"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />

        <TextView
            android:id="@+id/tv_details_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_num_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_num_hilt" />

        <TextView
            android:id="@+id/tv_details_barcode_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="样本条码："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_num"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />

        <TextView
            android:id="@+id/tv_details_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_barcode_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_barcode_hilt" />

        <TextView
            android:id="@+id/tv_details_id_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="检测结果ID："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_barcode"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />

        <TextView
            android:id="@+id/tv_details_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_id_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_id_hilt" />

        <TextView
            android:id="@+id/tv_details_result_hilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="检测结果："
            android:textColor="@color/black2"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_id"
            app:layout_constraintTop_toTopOf="@id/tv_details_state_hilt" />

        <TextView
            android:id="@+id/tv_details_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:text="-"
            android:textColor="@color/black2"
            android:textSize="26sp"
            app:layout_constraintLeft_toRightOf="@id/tv_details_result_hilt"
            app:layout_constraintTop_toTopOf="@id/tv_details_result_hilt" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_details_barcode_hilt,tv_details_barcode,tv_details_id,tv_details_id_hilt,tv_details_no,tv_details_no_hilt,tv_details_num,tv_details_num_hilt,tv_details_result,tv_details_result_hilt,tv_details_state,tv_details_state_hilt" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="228dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="48dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_cuvette_4">

            <View
                android:id="@+id/v_state_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_analyse_state_3"
                app:layout_constraintBottom_toBottomOf="@id/tv_state_3"
                app:layout_constraintLeft_toRightOf="@id/gl_right"
                app:layout_constraintTop_toTopOf="@id/tv_state_3" />

            <TextView
                android:id="@+id/tv_state_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="取样完成"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/tv_state_2"
                app:layout_constraintLeft_toRightOf="@id/v_state_3" />


            <View
                android:id="@+id/v_state_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/shape_analyse_state_4"
                app:layout_constraintBottom_toBottomOf="@id/tv_state_4"
                app:layout_constraintLeft_toRightOf="@id/gl_right"
                app:layout_constraintTop_toTopOf="@id/tv_state_4" />

            <TextView
                android:id="@+id/tv_state_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="检测中"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/tv_state_3"
                app:layout_constraintLeft_toRightOf="@id/v_state_4" />

            <View
                android:id="@+id/v_state_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/shape_analyse_state_2"
                app:layout_constraintBottom_toBottomOf="@id/tv_state_2"
                app:layout_constraintLeft_toRightOf="@id/gl_right"
                app:layout_constraintTop_toTopOf="@id/tv_state_2" />

            <TextView
                android:id="@+id/tv_state_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="检测完毕"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@id/tv_state_1"
                app:layout_constraintLeft_toRightOf="@id/v_state_2" />

            <View
                android:id="@+id/v_state_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/shape_analyse_state_1"
                app:layout_constraintBottom_toBottomOf="@id/tv_state_1"
                app:layout_constraintLeft_toRightOf="@id/gl_right"
                app:layout_constraintTop_toTopOf="@id/tv_state_1" />

            <TextView
                android:id="@+id/tv_state_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="出现异常"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sv_cuvette_4" />

        </LinearLayout>

        <View
            android:id="@+id/v_config"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_shadow"
            app:layout_constraintBottom_toBottomOf="parent"
