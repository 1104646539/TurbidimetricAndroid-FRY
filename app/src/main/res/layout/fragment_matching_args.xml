<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.wl.turbidimetric.matchingargs.MatchingArgsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_indicate"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_indicate1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextHilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="曲线拟合"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iv_indicate"
            app:layout_constraintLeft_toRightOf="@id/iv_indicate"
            app:layout_constraintTop_toTopOf="@id/iv_indicate" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="600dp" />

        <include
            android:id="@+id/header"
            layout="@layout/item_matchingargs_header"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/gl_center"
            app:layout_constraintTop_toBottomOf="@id/iv_indicate" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@id/v_config"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/gl_center"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <TextView
            android:id="@+id/tv_equation_text"
            style="@style/TextHilt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:text="asldjflsadjfkasldfjas;ldfasljdxzn,cnv,1321354653213465sadfsadfjlskdfj2131313546"
            android:textColor="@color/themePositiveColor"
            android:gravity="left|center_vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_fitgoodness_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gl_center" />

        <TextView
            android:id="@+id/tv_fitgoodness_text"
            style="@style/TextHilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/themePositiveColor"
            app:layout_constraintBottom_toTopOf="@id/lc_curve"
            app:layout_constraintLeft_toRightOf="@id/gl_center" />


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lc_curve"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@id/btn_print"
            app:layout_constraintLeft_toLeftOf="@id/gl_center"
            app:layout_constraintRight_toRightOf="parent" />


        <com.wl.turbidimetric.view.TextImageButton
            android:id="@+id/btn_print"
            style="@style/BtnPositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:minWidth="150dp"
            android:src="@drawable/datamanager_zoom"
            android:text="打印"
            app:layout_constraintBottom_toBottomOf="@id/gl_bottom"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="192dp" />

        <View
            android:id="@+id/v_config"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_analyse_config_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gl_center"
            app:layout_constraintTop_toBottomOf="@id/gl_bottom"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/v_matching"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shape_analyse_test_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/gl_center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_bottom" />

        <TextView
            android:id="@+id/tv_settings_matching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:text="拟合设置"
            android:textColor="@color/black2"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/gl_bottom" />

        <TextView
            android:id="@+id/tv_settings_reagent_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="序号"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_settings_matching"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_matching" />

        <TextView
            android:id="@+id/tv_settings_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="是否同时质控"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/gl_bottom2"
            app:layout_constraintTop_toTopOf="@id/tv_settings_reagent_no" />

        <TextView
            android:id="@+id/tv_settings_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="选择项目"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_settings_reagent_no"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_reagent_no" />

        <TextView
            android:id="@+id/tv_settings_fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="选择方程"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_settings_project"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_project" />

        <TextView
            android:id="@+id/tv_settings_target_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="目标浓度"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_settings_project"
            app:layout_constraintTop_toBottomOf="@id/tv_settings_fun" />


        <TextView
            android:id="@+id/tv_settings_grads_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拟合梯度数量"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toRightOf="@id/gl_bottom2"
            app:layout_constraintTop_toTopOf="@id/tv_settings_project" />

        <TextView
            android:id="@+id/tv_settings_auto_attenuation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否自动稀释"
            android:textColor="@color/black2"
            android:textSize="23sp"
            app:layout_constraintLeft_toRightOf="@id/gl_bottom2"
            app:layout_constraintTop_toTopOf="@id/tv_settings_fun" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="37dp"
            android:src="@drawable/analyse_enter"
            app:layout_constraintBottom_toBottomOf="@id/v_config"
            app:layout_constraintRight_toRightOf="@id/v_config"
            app:layout_constraintTop_toTopOf="@id/v_config" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_bottom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="420dp" />

        <ImageView
            android:id="@+id/iv_analyse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:src="@drawable/analyse_test_btn"
            app:layout_constraintBottom_toBottomOf="@id/v_matching"
            app:layout_constraintLeft_toLeftOf="@id/v_matching"
            app:layout_constraintTop_toTopOf="@id/v_matching" />

        <TextView
            android:id="@+id/tv_matching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="生成曲线中……"
            android:textColor="@color/white"
            android:textSize="58sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/v_matching"
            app:layout_constraintLeft_toRightOf="@id/iv_analyse"
            app:layout_constraintTop_toTopOf="@id/v_matching" />

        <TextView
            android:id="@+id/tv_matching2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_matching"
            app:layout_constraintTop_toBottomOf="@id/tv_matching" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
