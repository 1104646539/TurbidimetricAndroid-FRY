<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.wl.turbidimetric.model.TestResultModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/select_cb_query_data" />

        <TextView
            android:id="@+id/tvID"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ID" />


        <TextView
            android:id="@+id/tvDetectionNum"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="编号" />


        <TextView
            android:id="@+id/tvName"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="姓名" />


        <TextView
            android:id="@+id/tvGender"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="性别"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvAge"
            style="@style/TextHilt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="年龄"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tvAbsorbances"
            style="@style/TextHilt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="吸光度" />


        <TextView
            android:id="@+id/tvConcentration"
            style="@style/TextHilt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="浓度" />


        <TextView
            android:id="@+id/tvResult"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="检测结果" />


        <TextView
            android:id="@+id/tvTestTime"
            style="@style/TextHilt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="检测时间" />


        <TextView
            android:id="@+id/tvTestValue1"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第一次" />


        <TextView
            android:id="@+id/tvTestValue2"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第二次" />


        <TextView
            android:id="@+id/tvTestValue3"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第三次" />


        <TextView
            android:id="@+id/tvTestValue4"
            style="@style/TextHilt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="第四次" />

        <TextView
            android:id="@+id/tvTestOriginalValue1"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值1" />


        <TextView
            android:id="@+id/tvTestOriginalValue2"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值2" />


        <TextView
            android:id="@+id/tvTestOriginalValue3"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值3" />


        <TextView
            android:id="@+id/tvTestOriginalValue4"
            style="@style/TextTitle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="原始值4" />

        <TextView
            android:id="@+id/tvProjectName"
            style="@style/TextHilt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>
</layout>
