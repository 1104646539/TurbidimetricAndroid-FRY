<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:minWidth="960dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            app:tabIndicatorColor="@color/themePositiveColor"
            app:tabSelectedTextColor="@color/themePositiveColor"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:tabTextColor="@color/black2">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_matching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拟合" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="质控" />
        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step1 拟合配置"
            android:textColor="@color/themePositivePressColor" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.wl.turbidimetric.view.MatchingConfigMatchingLayout
            android:id="@+id/mcml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.wl.turbidimetric.view.MatchingConfigQualityLayout
            android:id="@+id/mcql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>

